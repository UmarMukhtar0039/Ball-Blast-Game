-- setting player's direction on pressing keys
local function onKeyEvent(event)
	if event.phase == "down" then
		if event.keyName == 'a' then
			player.dir = 'l'
		elseif event.keyName == 'd' then
			player.dir = 'r'
		end 
	end
	if event.phase == "up" then
		player.dir = nil
	end

end

